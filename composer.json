{
  "name": "raulmangolin/wp-google-photos-importer",
  "description": "Import your Google Photos albums to your Wordpress media gallery",
  "type": "wordpress-plugin",
  "homepage": "https://github.com/raulmangolin/WP-Google-Photos-Importer",
  "license": "GPL-3.0-or-later",
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "preferred-install": "dist",
    "sort-packages": true
  },
  "authors": [
    {
      "name": "Raul Mangolin",
      "email": "eu@raulmangolin.dev"
    }
  ],
  "require": {
    "composer/installers": "~1.0",
    "google/apiclient": "^2.7"
  },
  "require-dev": {
    "phpcompatibility/php-compatibility": "^9.3",
    "wp-coding-standards/wpcs": "2.3.0",
    "phpunit/phpunit": "^7.5",
    "squizlabs/php_codesniffer": "3.*"
  },
  "scripts": {
    "post-update-cmd": "Google\\Task\\Composer::cleanup",
    "phpcs-install-standards": [
      "\\InstituteWeb\\ComposerScripts\\ImprovedScriptExecution::apply",
      "vendor/bin/phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs,vendor/wpforms/phpcs-ruleset,vendor/phpcompatibility/php-compatibility"
    ],
    "dev-composer-install": [
      "@composer install --prefer-dist --no-scripts",
      "@phpcs-install-standards"
    ]
  },
  "extra": {
    "google/apiclient-services": [
      "Firestore",
      "Gmail",
      "PhotosLibrary"
    ],
    "merge-plugin": {
      "recurse": true,
      "replace": false,
      "ignore-duplicates": false,
      "merge-dev": true,
      "merge-extra": true,
      "merge-extra-deep": false,
      "merge-scripts": true
    }
  }
}
